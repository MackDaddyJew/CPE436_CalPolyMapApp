<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginBottom="16dp"
              android:layout_marginLeft="16dp"
              android:layout_marginRight="16dp"
              android:layout_marginTop="16dp"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/cal_poly_logo"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:src="@drawable/calpoly_logo"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Welcome to Campus maps. Please use the buttons bellow to sign in into the application."
        android:textSize="20dp" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp" />

    <Button
        android:id="@+id/sign_out_button_google"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign out from Google"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/sign_in_button_guest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign in as a Guest"
        android:textAllCaps="false" />

</LinearLayout>