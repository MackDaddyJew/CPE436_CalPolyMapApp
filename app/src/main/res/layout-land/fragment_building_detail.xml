<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/buildingDetailLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@android:color/holo_red_dark"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/buildingDetailImage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            app:srcCompat="@drawable/ic_landscape_icon" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".6">

            <TextView
                android:id="@+id/buildingDetailText"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textAlignment="textStart"
                android:layout_weight="0.5"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".5"
                android:paddingRight="96dp"
                android:paddingBottom="32dp">

                <Button
                    android:text="View All Routes"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/viewRoutesButton"
                    android:layout_weight="1" />

                <Button
                    android:text="Create New Route"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/newRouteButton"
                    android:layout_weight="1" />


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>