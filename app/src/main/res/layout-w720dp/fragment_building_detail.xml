<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/buildingDetailLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@android:color/holo_red_dark"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/buildingDetailImage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6" />

        <TextView
            android:id="@+id/buildingDetailText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textAlignment="textStart"
            android:layout_weight="0.4"/>
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/buildingDetailFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        app:layout_anchor="@id/buildingDetailText"
        app:layout_anchorGravity="bottom|end|right"/>
</FrameLayout>