<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="16dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:srcCompat="@drawable/ic_landscape_icon"
        android:layout_weight=".5"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:text="Welcome to Campus maps. Please use the buttons bellow to sign in into the application."
        android:textSize="20dp"
        android:layout_weight=".2"/>

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:layout_weight=".2"/>

    <Button
        android:id="@+id/sign_out_button_google"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Sign out from Google"
        android:textAllCaps="false"
        android:layout_weight=".2"/>

    <Button
        android:id="@+id/sign_in_button_guest"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Sign in as a Guest"
        android:textAllCaps="false"
        android:layout_weight=".2"/>

</LinearLayout>