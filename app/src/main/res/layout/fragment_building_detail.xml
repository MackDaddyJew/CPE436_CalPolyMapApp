<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/buildingDetailLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@android:color/holo_red_dark"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/buildingDetailImage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            app:srcCompat="@drawable/ic_landscape_icon" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:paddingBottom="96dp">

            <TextView
                android:id="@+id/buildingDetailText"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textAlignment="textStart"
                android:layout_weight="3"/>

            <Button
                android:text="View All Routes"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/viewRoutesButton"
                android:layout_weight="1" />

            <Button
                android:text="Create New Route"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/newRouteButton"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/buildingDetailFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        app:layout_anchor="@id/buildingDetailText"
        app:layout_anchorGravity="bottom|end|right"/>
</FrameLayout>